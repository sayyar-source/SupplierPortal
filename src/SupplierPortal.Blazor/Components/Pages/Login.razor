@page "/login"
@layout EmptyLayout
@rendermode InteractiveServer
@inject AuthService AuthService
@inject NavigationManager Nav

<link rel="stylesheet" href="css/style.css">
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6 text-center mb-5">
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col-md-7 col-lg-5">
			<div class="login-wrap p-4 p-md-5">
				<div class="icon d-flex align-items-center justify-content-center">
					<span class="fa fa-user-o"></span>
				</div>
				<h3 class="text-center mb-4">Sign In</h3>

				<!-- remove action="#" and use Blazor binding -->
				<form class="login-form" onsubmit="return false;">
					<div class="form-group">
						<!-- prefer @bind for simple two-way binding -->
						<input type="text" class="form-control rounded-left" placeholder="Username" @bind="Username" required>
					</div>
					<div class="form-group d-flex">
						<input type="password" class="form-control rounded-left" @bind="Password" placeholder="Password" required>
					</div>
					<div class="form-group">
						<!-- ensure Blazor event binding is used -->
						<button type="button" class="form-control btn btn-primary rounded submit px-3" @onclick="OnLogin">Login</button>
					</div>
					<div class="form-group d-md-flex">
						<div class="w-50">
							<label class="checkbox-wrap checkbox-primary">
								Remember Me
								<input type="checkbox" checked>
								<span class="checkmark"></span>
							</label>
						</div>
						<div class="w-50 text-md-right">
							<a href="#">Forgot Password</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


@code {

	public string Username { get; set; } = string.Empty;
	public string Password { get; set; } = string.Empty;

	private async Task OnLogin()
	{
		Console.WriteLine("OnLogin invoked"); 
		var status = await AuthService.LoginAsync(Username, Password);
		if (status)
		{
			Nav.NavigateTo("/");
		}
	} 

}
